{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/**/*.rs",
      "use": "vercel-rust"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/next",
      "config": { "zeroConfig": true }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/api/main.rs"
    },
    {
      "src": "/(.*)",
      "dest": "frontend"
    }
  ]
}